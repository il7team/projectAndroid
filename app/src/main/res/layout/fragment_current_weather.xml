<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@android:color/transparent"
    tools:context="com.bitm.travelmate.CurrentWeather">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:background="@color/content_background_color"
        android:padding="10dp"
        android:layout_margin="0.2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/location_tv"
            android:gravity="left"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/condition"
            android:layout_toStartOf="@+id/condition" />

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:background="@color/content_background_color"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/day_tv"
            android:gravity="left"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_toLeftOf="@+id/condition"
            android:layout_toStartOf="@+id/condition" />
        <TextView
            android:id="@+id/date_tv"
            android:gravity="left"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_toLeftOf="@+id/condition"
            android:layout_toStartOf="@+id/condition" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/content_background_color"
        android:layout_margin="0.3dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/sunrise_icon"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/sunrise_tv"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/condition"
            android:layout_toStartOf="@+id/condition" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:src="@drawable/sunset_icon"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/sunset_tv"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/condition"
            android:layout_toStartOf="@+id/condition" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/content_background_color"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/high_temp_icon"
            android:layout_height="40dp" />

        <TextView
            android:paddingLeft="3dp"
            android:id="@+id/high_temp_tv"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/condition"
            android:layout_toStartOf="@+id/condition" />
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:src="@drawable/low_temp_icon"
            android:layout_height="40dp" />
        <TextView
            android:paddingLeft="3dp"
            android:id="@+id/low_temp_tv"

            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="15sp"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/condition"
            android:layout_toStartOf="@+id/condition"
            android:layout_weight="0.18" />
        <ImageView
           android:layout_marginLeft="100dp"
            android:layout_gravity="center"
            android:src="@drawable/humidity_icon"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:paddingLeft="3dp"
            android:id="@+id/humidity_tv"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/temperature_tv"
            android:background="@color/content_background_color"
            android:gravity="center"
            android:layout_marginRight="1dp"
            android:textColor="@android:color/white"
            android:textSize="50dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="150dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/condition_iv"
                android:layout_margin="1dp"
                android:layout_height="0dp"
                android:background="@color/content_background_color"
                android:layout_width="match_parent"
                android:scaleType="center"
                android:layout_weight="2"

                />
            <TextView
                android:id="@+id/condition_tv"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/content_background_color"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_height="0dp" />

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>


</LinearLayout>
